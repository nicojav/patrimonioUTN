        (function poll() {
            $.ajax({
                url:'{{ path('get_notificaciones_alert', {'_sonata_admin':'utn_dashboard_main.admin.notificacion'} )  }}',
                method: 'POST',
                success: function(data) {
                    if(data.mensaje){
                        alertify.log(data.mensaje);
                    }
                    //alert('New orders');
                },
                error: function() {},
                complete: function() {
                    setTimeout(poll, 10000);
                }
            });
        })();
    </script>
